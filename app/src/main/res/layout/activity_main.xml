<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- "Expired date:" label -->
    <TextView
        android:id="@+id/expiry_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sim_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- RecyclerView for SIM cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/expiry_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sub-FAB: Set Reminder Days -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSetReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Set Reminder Days"
        android:src="@drawable/ic_calendar"
        app:backgroundTint="@color/amber_500"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="240dp"
        android:visibility="gone"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sub-FAB: Set Notification Time -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSetAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Set Notification Time"
        android:src="@drawable/ic_alarm"
        app:backgroundTint="@color/teal_200"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="170dp"
        android:visibility="gone"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sub-FAB: Add SIM -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add SIM Card"
        android:src="@drawable/ic_sim_card"
        app:backgroundTint="@color/teal_700"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sub-FAB: Theme Toggle -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabThemeToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle Theme"
        android:src="@drawable/ic_theme"
        app:backgroundTint="@color/purple_700"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="310dp"
        android:visibility="gone"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main FAB (+) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Menu"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/purple_500"
        android:layout_margin="16dp"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
